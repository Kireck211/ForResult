<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityChangeName"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/activity_change_name_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_change_name_btn_cancel"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_change_name_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/activity_change_name_btn_ok"
        app:layout_constraintTop_toBottomOf="@id/activity_change_name_et_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Cancel"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_change_name_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/activity_change_name_btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/activity_change_name_btn_cancel"
        app:layout_constraintBottom_toBottomOf="@id/activity_change_name_btn_cancel"
        android:text="Ok"/>

</androidx.constraintlayout.widget.ConstraintLayout>